<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dex="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="it.dex.movingimageview.fragments.CrossFadeFragment">

    <it.dex.movingimageviewlib.DexMovingImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/material"
        dex:evaluator="simple"
        dex:images_array="@array/images"
        dex:generator="base"
        dex:angle="130"
        dex:loop="true"
        dex:zoom="1.65"
        dex:drawer="scale|translate"
        dex:still_image_duration_millis="3000"
        dex:transition_duration_millis="1000" />

    <android.support.v7.widget.CardView
        android:id="@+id/values_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/activity_horizontal_margin"
        dex:cardBackgroundColor="@color/accent"
        dex:cardCornerRadius="5dp"
        dex:cardElevation="5dp">

        <LinearLayout
            android:id="@+id/values_layout"
            android:layout_width="match_parent"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/secondary"
                    android:text="x:"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/x_value"
                    android:textColor="@color/secondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/secondary"
                    android:text="y:"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/y_value"
                    android:textColor="@color/secondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/secondary"
                    android:text="z:"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/z_value"
                    android:textColor="@color/secondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/secondary"
                    android:text="Angle:"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/angle_value"
                    android:textColor="@color/secondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/secondary"
                    android:text="Event:"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/event_occurrences"
                    android:text="0"
                    android:textColor="@color/secondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/commands_card_view"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_above="@id/values_card_view"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        dex:cardBackgroundColor="@color/accent"
        dex:cardCornerRadius="5dp"
        dex:cardElevation="5dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:textColor="@color/secondary"
                        android:text="Evaluator:"
                        android:layout_height="wrap_content" />

                    <Spinner
                        android:id="@+id/evaluators"
                        android:layout_width="match_parent"
                        android:textColor="@color/secondary"
                        android:padding="5dp"
                        android:entries="@array/evaluators"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"></Spinner>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/primary" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:padding="5dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:textColor="@color/secondary"
                        android:text="Values Generator:"
                        android:layout_height="wrap_content" />

                    <Spinner
                        android:id="@+id/generators"
                        android:layout_width="match_parent"
                        android:entries="@array/generators"
                        android:textColor="@color/secondary"
                        android:padding="5dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"></Spinner>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/primary" />

                <LinearLayout
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:textColor="@color/secondary"
                        android:text="Drawers:"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <CheckBox
                            android:id="@+id/drawer_scale"
                            android:layout_width="wrap_content"
                            android:textColor="@color/secondary"
                            android:padding="5dp"
                            android:text="Scale"
                            android:layout_height="wrap_content" />

                        <CheckBox
                            android:id="@+id/drawer_rotate"
                            android:textColor="@color/secondary"
                            android:layout_width="wrap_content"
                            android:padding="5dp"
                            android:text="Rotate"
                            android:layout_height="wrap_content" />

                        <CheckBox
                            android:id="@+id/drawer_translate"
                            android:layout_width="wrap_content"
                            android:padding="5dp"
                            android:textColor="@color/secondary"
                            android:text="Translate"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/primary" />

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:text="Zoom"
                        android:layout_width="match_parent"
                        android:textColor="@color/secondary"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="0"
                            android:padding="5dp"
                            android:textColor="@color/secondary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <SeekBar
                            android:id="@+id/zoom_seek_bar"
                            android:layout_width="match_parent"
                            android:max="400"
                            android:layout_weight="1"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="4.0"
                            android:textColor="@color/secondary"
                            android:padding="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <TextView
                        android:text="Angle"
                        android:layout_width="match_parent"
                        android:paddingTop="@dimen/activity_horizontal_margin"
                        android:textColor="@color/secondary"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="0"
                            android:textColor="@color/secondary"
                            android:padding="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <SeekBar
                            android:id="@+id/angle_seek_bar"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:max="360"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:textColor="@color/secondary"
                            android:padding="5dp"
                            android:text="360"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <TextView
                        android:text="Speed"
                        android:layout_width="match_parent"
                        android:paddingTop="@dimen/activity_horizontal_margin"
                        android:textColor="@color/secondary"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="0"
                            android:textColor="@color/secondary"
                            android:padding="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <SeekBar
                            android:id="@+id/speed_seek_bar"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:max="100"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:textColor="@color/secondary"
                            android:padding="5dp"
                            android:text="100"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>


</RelativeLayout>
